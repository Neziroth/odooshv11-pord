<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_by_location_tree_start" model="ir.ui.view">
        <field name="name">Stock By Location</field>
        <field name="model">stock.by.location</field>
        <field name="arch" type="xml">
            <form string="Refresh Stock By Locations">
                <footer>
                    <button name="recalculate_stock_by_location" string="Refresh the Inventory Quantities" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="x_stock_by_location_start" model="ir.actions.act_window">
        <field name="name">Stock By Locations</field>
        <field name="res_model">stock.by.location</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_stock_by_location_tree_start"/>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_stock_by_location" name="Stock By Locations" parent="stock.menu_warehouse_report" sequence="100" action="x_stock_by_location_start"/>

</odoo>
